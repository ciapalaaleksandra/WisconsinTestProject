<body class="text-center">

    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="">Zaloguj się</h1>
                </div>
            </div>
        </div>
    </div>
</body>
    <body>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            if (@ViewBag.Error != null)
            {
                <div style="color: red">
                    <center>@ViewBag.Error</center>
                </div>
            }

            <div class="py-5">
                <div class="container">
                    <div class="row">
                        <div class="mx-auto col-9 col-md-7 col-xl-5 col-sm-8 col-lg-6">
                            <form class="">
                                <div class="form-group">
                                    <label>Login</label>
                                    @Html.EditorFor(a => a.Login, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="form-group w-100">
                                    <label>Hasło</label>
                                    @Html.EditorFor(a => a.Passowrd, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                </div>
                            </form>
                            <p class="font-small blue-text d-flex justify-content-end">
                                Zapomniałeś
                                <a href="#" class="blue-text ml-1"> Hasła?</a>
                            </p>
                            <!--<a class="btn btn-primary" type="submit" href="#">Zaloguj</a>-->
                            <button type="submit" class="btn btn-primary">Zaloguj</button>
                            <!--<center><input type="submit" value="Zaloguj" class="btn" /></center>-->
                        </div>
                    </div>
                </div>
            </div>

        }
    </body>

