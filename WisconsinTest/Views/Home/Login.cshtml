@model WisconsinTest.Models.Users

@{
    Layout = "~/Views/Shared/_WSCTLayout.cshtml";
}

<!DOCTYPE html>
<script src="https://apis.google.com/js/platform.js" async defer></script>
<meta name="google-signin-client_id" content="7798138621-n4ibmc0h51b9g8ogfqp9o9cbkd2uc4gp.apps.googleusercontent.com">
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
</head>

<body class="text-center">

    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="">Zaloguj się</h1>
                </div>
            </div>
        </div>
    </div>
</body>
<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        if (@ViewBag.Error != null)
        {
            <div style="color: red">
                <center>@ViewBag.Error</center>
            </div>
        }

        <div class="py-5">
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-9 col-md-7 col-xl-5 col-sm-8 col-lg-6">
                        <form class="">
                            <div class="form-group">
                                <label>Login</label>
                                @Html.EditorFor(a => a.Login, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group w-100">
                                <label>Hasło</label>
                                @Html.EditorFor(a => a.Passowrd, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            </div>
                        </form>
                        <div class="p-4">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary">Zaloguj</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="py-5">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p class="font-small grey-text d-flex justify-content-center">
                                            Nie masz konta?
                                            <a href="#" class="blue-text ml-1">  @Html.ActionLink("Zarejestruj się", "PsychologistRegistration")</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    }

    <!--Footer-->
    <!--<div class="modal-footer mx-5 pt-3 mb-1">
        <p class="font-small grey-text d-flex justify-content-end">
            Nie masz konta?
            <a href="#" class="blue-text ml-1">  @Html.ActionLink("Zarejestruj się", "PsychologistRegistration")</a>
        </p>
    </div>-->

</body>

</html>
