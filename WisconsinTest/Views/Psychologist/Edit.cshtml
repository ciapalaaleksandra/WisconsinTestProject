@model WisconsinTest.Models.Patients

@{
    Layout = "~/Views/Shared/_WSCTLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
</head>


<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <div class="">
            <div class="container">
                <div class="row">
                    <button type="button" class="btn btn-secondary" onclick="@("window.location.href='" + @Url.Action("Details", "Psychologist") + "'");">
                        <i class="d-block  fa fa-5x fa-arrow-circle-left"></i>
                    </button>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="">Edytuj</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-xl-5 col-10 col-md-7 col-sm-8">
                        <form class="">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.PatientId)

                            <div class="form-group">
                                <label>Psycholog</label>
                                @Html.DropDownList("PsychologistId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PsychologistId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Imię</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Nazwisko</label>
                                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Pesel</label>
                                @Html.EditorFor(model => model.PESEL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PESEL, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Adres</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Numer telefonu</label>
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Data urodzenia</label>
                                @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary">Zapisz zmiany</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

</body>

</html>
