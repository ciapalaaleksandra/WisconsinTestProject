@model IEnumerable<WisconsinTest.Models.Patients>
@Styles.Render("~/Views/Shared/_Layout.cshtml")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PESEL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Psychologists.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PESEL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate.Day) . @Html.DisplayFor(modelItem => item.BirthDate.Month) . @Html.DisplayFor(modelItem => item.BirthDate.Year, new { @class = "txtbx" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.PatientId }) |
                @Html.ActionLink("Details", "Details", new { id=item.PatientId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.PatientId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
